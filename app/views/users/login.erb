<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Please Log In</h1>

<form action="/login" method="post">
    <p>Username: <input type="text" name="username" id="username"></p>
    <p>Password: <input type="password" name="password" id="password"></p>
    <input type="submit" value="Log In">
</form>